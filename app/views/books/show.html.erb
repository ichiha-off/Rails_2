<p>
    <%= attachment_image_tag @book.user, :profile_image, size: "100x100" %>
</p>
<p>
    <strong>Title:</strong>
    <%= @book.title %>
</p>
<p>
    <strong>Body:</strong>
    <%= @book.body %>
</p>

<% if @book.user == current_user %>
    <td><%= link_to "Edit", edit_book_path(@book) %></td>
    <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
<% end %>
